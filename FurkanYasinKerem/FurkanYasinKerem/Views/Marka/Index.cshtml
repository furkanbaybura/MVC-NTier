@model List<MarkaViewModel>

<a class="btn btn-primary" asp-action="Create" asp-controller="Marka">Yeni Marka</a>

<table class="table table-striped table-hover">
    <tr>
        <td>#</td>
        <td>Ad</td>
        <td>Resim</td>
        <td>işlemler</td>

    </tr>

    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.RowNum</td>
                <td>@item.Name</td>
                <td> <img height="60px" width="60px" src="~/Images/@item.logoAd" alt="Resim Yok" /> </td>
                <td>
                    <a class="btn btn-info" asp-controller="Marka" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-secondary" asp-controller="Marka" asp-action="Detail" asp-route-id="@item.Id">Detay</a>
                    <a class="btn btn-danger" asp-controller="Marka" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>

            </tr>
        }
    }
</table>









